datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  password String  
  name   String
}

model Employees {
  id             String            @id @default(uuid())
  email          String            @unique
  senha          String  
  name           String
  cpf            String
  companyId      String
  company        Company           @relation(fields: [companyId], references: [id])
  startDate   DateTime
  phone       String
  updateat       DateTime
  deleted       Boolean?
  terminationDate  DateTime?
  timeRecord TimeRecord[] 
}

model Company {
  id             String            @id @default(uuid())
  email          String            @unique
  password          String  
  name           String
  cnpj           String
  corporateName    String
  startDate   DateTime
  phone       String
  updateat      DateTime
  deleted       Boolean?
  terminationDate  DateTime?
  employees   Employees[]
  timeRecord TimeRecord[]
}

model TimeRecord {
  id             String            @id @default(uuid())
  employeesId  String
  companyId      String
  employees      Employees       @relation(fields: [employeesId], references: [id])
  company        Company           @relation(fields: [companyId], references: [id])
  updateat       DateTime
  clockIn      DateTime?
  lunchBreak   DateTime?
  break        DateTime?
  clockOut     DateTime?
  deleted       Boolean?

}